<?xml version="1.0" encoding="UTF-8"?>
<config>
	<form>
		<name>accountPasswordReset</name>
		<attributes>
			<method>post</method>
		</attributes>
		<fieldset></fieldset>
		<fieldsets>
			<fsMain>
				<type>Zend\Form\Fieldset</type>
				<options>
					<legend>Your current password</legend>
				</options>
			</fsMain>
			<fsReset>
				<type>Zend\Form\Fieldset</type>
				<options>
					<legend>Enter new password</legend>
				</options>
			</fsReset>
		</fieldsets>
		<elements>
			<csrf>
				<type>Zend\Form\Element\Csrf</type>
			</csrf>
			<oldPassword>
				<name>oldPassword</name>
				<type>Zend\Form\Element\Password</type>
				<fieldset>fsMain</fieldset>
				<options>
					<label></label>
				</options>
			</oldPassword>
			<password>
				<name>password</name>
				<type>Zend\Form\Element\Password</type>
				<fieldset>fsReset</fieldset>
				<options>
					<label>New Password</label>
				</options>
			</password>
			<newPassword>
				<name>newPassword</name>
				<type>Zend\Form\Element\Password</type>
				<fieldset>fsReset</fieldset>
				<options>
					<label>Repeat password</label>
				</options>
			</newPassword>
			<submitBtn>
				<type>Zend\Form\Element\Submit</type>
				<options>
					<label>Submit</label>
					<primary>1</primary>
				</options>
				<attributes>
					<value>Submit</value>
				</attributes>
			</submitBtn>
		</elements>
		<inputFilter>
			<fieldsets>
				<fsMain>
					<oldPassword>
						<name>password</name>
						<required>1</required>
						<validators>
							<not_empty>
								<options>
									<messages>
										<isEmpty>Required.</isEmpty>
									</messages>
								</options>
							</not_empty>
						</validators>
					</oldPassword>
				</fsMain>
				<fsReset>
					<password>
						<name>password</name>
						<required>1</required>
						<validators>
							<not_empty>
								<options>
									<messages>
										<isEmpty>Required.</isEmpty>
									</messages>
								</options>
							</not_empty>
							<string_length>
								<name>string_length</name>
								<options>
									<min>5</min>
									<messages>
										<stringLengthTooShort><![CDATA[Password given is too short.]]>
										</stringLengthTooShort>
									</messages>
								</options>
							</string_length>
						</validators>
					</password>
					<newPassword>
						<name>newPassword</name>
						<required>1</required>
						<validators>
							<not_empty>
								<options>
									<messages>
										<isEmpty>Required.</isEmpty>
									</messages>
								</options>
							</not_empty>
							<identical>
								<name>identical</name>
								<options>
									<token>password</token>
									<messages>
										<missingToken><![CDATA[Kindly enter you password again.]]>
										</missingToken>
										<notSame><![CDATA[Passwords given doesn't match.]]>
										</notSame>
									</messages>
								</options>
							</identical>
						</validators>
					</newPassword>
				</fsReset>
			</fieldsets>
		</inputFilter>
	</form>
</config>