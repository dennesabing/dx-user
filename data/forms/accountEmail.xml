<?xml version="1.0" encoding="UTF-8"?>
<config>
	<form>
		<name>accountEmail</name>
		<attributes>
			<method>post</method>
		</attributes>
		<fieldset></fieldset>
		<fieldsets>
			<fsReset>
				<type>Zend\Form\Fieldset</type>
				<options>
					<legend>Enter new email address</legend>
				</options>
			</fsReset>
			<fsMain>
				<type>Zend\Form\Fieldset</type>
				<options>
					<legend>Account Password</legend>
				</options>
			</fsMain>
		</fieldsets>
		<elements>
			<csrf>
				<type>Zend\Form\Element\Csrf</type>
			</csrf>
			<email>
				<name>email</name>
				<type>Zend\Form\Element\Text</type>
				<fieldset>fsReset</fieldset>
				<options>
					<label>New email address</label>
				</options>
			</email>
			<newEmail>
				<type>Zend\Form\Element\Text</type>
				<fieldset>fsReset</fieldset>
				<options>
					<label>Repeat email address</label>
				</options>
			</newEmail>
			<password>
				<name>password</name>
				<type>Zend\Form\Element\Password</type>
				<fieldset>fsMain</fieldset>
				<options>
					<label></label>
				</options>
			</password>
			<submitBtn>
				<type>Zend\Form\Element\Submit</type>
				<options>
					<label>Submit</label>
					<primary>1</primary>
				</options>
				<attributes>
					<value>Submit</value>
				</attributes>
			</submitBtn>
		</elements>
		<inputFilter>
			<fieldsets>
				<fsMain>
					<password>
						<name>password</name>
						<required>1</required>
						<validators>
							<not_empty>
								<options>
									<messages>
										<isEmpty>Required.</isEmpty>
									</messages>
								</options>
							</not_empty>
						</validators>
					</password>
				</fsMain>
				<fsReset>
					<email>
						<name>email</name>
						<required>1</required>
						<validators>
							<not_empty>
								<options>
									<messages>
										<isEmpty>Required.</isEmpty>
									</messages>
								</options>
							</not_empty>
							<email_address>
								<name>email_address</name>
								<options>
									<messages>
										<emailAddressInvalidFormat><![CDATA[Invalid email address given.]]></emailAddressInvalidFormat>
									</messages>
								</options>
							</email_address>
							<no_record_exists>
								<options>
									<mapper>getServiceManager|zfcuser_user_mapper</mapper>
									<key>email</key>
									<messages>
										<recordFound><![CDATA[Email address already exists.]]>
										</recordFound>
									</messages>
								</options>
							</no_record_exists>
						</validators>
					</email>
					<newEmail>
						<name>newEmail</name>
						<required>1</required>
						<validators>
							<not_empty>
								<options>
									<messages>
										<isEmpty>Required.</isEmpty>
									</messages>
								</options>
							</not_empty>
							<identical>
								<name>identical</name>
								<options>
									<token>email</token>
									<messages>
										<missingToken><![CDATA[Kindly enter you email address again.]]>
										</missingToken>
										<notSame><![CDATA[Email address don\'t match.]]>
										</notSame>
									</messages>
								</options>
							</identical>
						</validators>
					</newEmail>
				</fsReset>
			</fieldsets>
		</inputFilter>
	</form>
</config>