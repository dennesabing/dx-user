<?xml version="1.0" encoding="UTF-8"?>
<config>
	<form>
		<name>register</name>
		<attributes>
			<method>post</method>
		</attributes>
		<fieldsets>
			<fsMain>
				<name>fsMain</name>
				<type>Zend\Form\Fieldset</type>
				<options>
					<legend></legend>
				</options>
			</fsMain>
		</fieldsets>
		<elements>
			<csrf>
				<type>Zend\Form\Element\Csrf</type>
			</csrf>
			<email>
				<type>Zend\Form\Element\Text</type>
				<fieldset>fsMain</fieldset>
				<options>
					<label>Email Address</label>
				</options>
			</email>
			<password>
				<name>password</name>
				<type>Zend\Form\Element\Password</type>
				<fieldset>fsMain</fieldset>
				<options>
					<label>Password</label>
				</options>
			</password>
			<newPassword>
				<name>newPassword</name>
				<type>Zend\Form\Element\Password</type>
				<fieldset>fsMain</fieldset>
				<options>
					<label>New Password</label>
				</options>
			</newPassword>
			<submitBtn>
				<type>Zend\Form\Element\Submit</type>
				<options>
					<label>Submit</label>
					<primary>1</primary>
				</options>
				<attributes>
					<value>Submit</value>
				</attributes>
			</submitBtn>
		</elements>
		<inputFilter>
			<fieldsets>
				<fsMain>
					<password>
						<name>password</name>
						<required>1</required>
						<validators>
							<not_empty>
								<options>
									<messages>
										<isEmpty>Required.</isEmpty>
									</messages>
								</options>
							</not_empty>
							<string_length>
								<name>string_length</name>
								<options>
									<min>5</min>
									<messages>
										<stringLengthTooShort><![CDATA[Password given is too short.]]>
										</stringLengthTooShort>
									</messages>
								</options>
							</string_length>
						</validators>
					</password>
					<newPassword>
						<name>newPassword</name>
						<required>1</required>
						<validators>
							<not_empty>
								<options>
									<messages>
										<isEmpty>Required.</isEmpty>
									</messages>
								</options>
							</not_empty>
							<identical>
								<name>identical</name>
								<options>
									<token>password</token>
									<messages>
										<missingToken><![CDATA[Kindly enter you password again.]]>
										</missingToken>
										<notSame><![CDATA[Passwords given doesn't match.]]>
										</notSame>
									</messages>
								</options>
							</identical>
						</validators>
					</newPassword>
					<email>
						<name>email</name>
						<required>1</required>
						<validators>
							<not_empty>
								<options>
									<messages>
										<isEmpty>Required.</isEmpty>
									</messages>
								</options>
							</not_empty>
							<email_address>
								<name>email_address</name>
								<options>
									<messages>
										<emailAddressInvalidFormat><![CDATA[Invalid email address given.]]></emailAddressInvalidFormat>
									</messages>
								</options>
							</email_address>
							<no_record_exists>
								<options>
									<mapper>getServiceManager|zfcuser_user_mapper</mapper>
									<key>email</key>
									<messages>
										<recordFound><![CDATA[Email address already exists.]]>
										</recordFound>
									</messages>
								</options>
							</no_record_exists>
						</validators>
					</email>
				</fsMain>
			</fieldsets>
		</inputFilter>
	</form>
</config>