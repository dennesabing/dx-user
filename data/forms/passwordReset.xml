<?xml version="1.0" encoding="UTF-8"?>
<config>
	<form>
		<name>passwordReset</name>
		<attributes>
			<method>post</method>
		</attributes>
		<fieldsets>
			<fsMain>
				<name>fsMain</name>
				<type>Zend\Form\Fieldset</type>
				<options>
					<legend>Enter your registered email address</legend>
				</options>
			</fsMain>
		</fieldsets>
		<elements>
			<csrf>
				<type>Zend\Form\Element\Csrf</type>
			</csrf>
			<email>
				<type>Zend\Form\Element\Text</type>
				<fieldset>fsMain</fieldset>
				<options>
					<label></label>
				</options>
			</email>
			<submitBtn>
				<type>Zend\Form\Element\Submit</type>
				<options>
					<label>Submit</label>
					<primary>1</primary>
				</options>
				<attributes>
					<value>Submit</value>
				</attributes>
			</submitBtn>
		</elements>
		<inputFilter>
			<fieldsets>
				<fsMain>
					<email>
						<name>email</name>
						<required>1</required>
						<validators>
							<not_empty>
								<options>
									<messages>
										<isEmpty>Required.</isEmpty>
									</messages>
								</options>
							</not_empty>
							<email_address>
								<name>email_address</name>
								<options>
									<messages>
										<emailAddressInvalidFormat><![CDATA[Invalid email address given.]]></emailAddressInvalidFormat>
									</messages>
								</options>
							</email_address>
							<record_exists>
								<name>record_exists</name>
								<options>
									<mapper>getServiceManager|zfcuser_user_mapper</mapper>
									<key>email</key>
									<messages>
										<noRecordFound><![CDATA[Email address not found.]]>
										</noRecordFound>
									</messages>
								</options>
							</record_exists>
						</validators>
					</email>
				</fsMain>
			</fieldsets>
		</inputFilter>
	</form>
</config>