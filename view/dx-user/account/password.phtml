<?php

$html = '';
$this->dxBreadcrumb()->add('memberAccount', array('anchor' => 'Account'));
$this->dxBreadcrumb()->add('memberAccountPassword', array('anchor' => 'Update Password'));
$this->partial('dx-user/account/nav');

$this->dxHtml()->setTitle('Update Password');

if ($this->success)
{
	$this->dxAlert()->addSuccess('<strong>Successfull</strong><br />Password updated.');
}
else
{
	if ($this->oldPasswordError)
	{
		$this->dxAlert()->addError('<strong>Password error</strong><br />Account password don\'t match.');
	}
}

$form = $this->form;
$form->prepare();
$html .= $this->formTwb($form, $this->dx()->getModuleOptions()->getFormTypeLayout(), $this->formDisplayOptions);

echo $html;
